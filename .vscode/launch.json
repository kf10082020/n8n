{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Jest: current file",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/node_modules/.bin/jest",
			"args": ["${fileBasenameNoExtension}"],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"windows": {
				"program": "${workspaceFolder}/node_modules/jest/bin/jest"
			},
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"name": "Attach to running n8n",
			"type": "node",
			"request": "attach",
			"processId": "${command:PickProcess}",
			"skipFiles": ["<node_internals>/**"],
			"restart": true,
			"autoAttachChildProcesses": true
		},
		{
			"name": "Launch n8n with debug",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/packages/cli/bin/n8n",
			"cwd": "${workspaceFolder}/packages/cli/bin",
			"envFile": "${workspaceFolder}/.env",
			"env": {
				// "N8N_PORT": "5679",
				"NODE_ENV": "development"
			},
			"outputCapture": "std",
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**"],
			"killBehavior": "polite"
		},
		{
			"name": "Launch n8n CLI dev with debug",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/packages/cli",
			"runtimeExecutable": "pnpm",
			"runtimeArgs": ["run", "buildAndDev", "--", "--inspect-brk"],
			"console": "integratedTerminal",
			"restart": true,
			"autoAttachChildProcesses": true,
			"skipFiles": ["<node_internals>/**"],
			"envFile": "${workspaceFolder}/.env",
			"outputCapture": "std",
			"killBehavior": "polite"
		},
		{
			"name": "Debug CLI tests",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}/packages/cli",
			"runtimeExecutable": "npm",
			"args": ["run", "test"],
			"skipFiles": ["<node_internals>/**"]
		}
	]
}
